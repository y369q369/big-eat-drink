/* 1. 设置整个页面的背景颜色 */
page {
    background: #f5f5f5;
    /* 避免左侧Item不够时 被白色覆盖*/
}

/* 2.主盒子 */
.container {
    width: 100%;
    height: 100%;
    background-color: #fff;
}

/* 3.左盒子*/
.nav_left {
    position: absolute;                 
    top: 0px;                           
    left: 0px;                          
    width: 25%;                        
    background: #f5f5f5;            
    text-align: center;
    padding-top: 10px;        
}

.nav_left .nav_left_items {
    height: 40px;
    line-height: 40px;
    padding: 6px 0;
    border-bottom: 1px solid #dedede;
    font-size: 14px;
}

.nav_left .nav_left_items.active {
    background: #fff;
    color: #3385ff;
    border-left: 3px solid #3385ff;
}

/* 4.右盒子 */
.nav_right {
    position: absolute;
    top: 0;
    left: 80px;
    width: 75%;
    height: 600px;
    padding: 10px;
    background: #fff;
}

.nav_right .nav_right_items {
    height: 40px;
    line-height: 40px;
    padding: 6px;
    margin-right: 6px;
}

.nav_right .nav_right_items .nav_right_items-img {
    float: left; 
    width: 25%; 
    height: 40px;
}

.nav_right .nav_right_items .nav_right_items-img .nav_right_items-img-detail {
    width: 100%; 
    height: 100%; 
    background-color: #eeeeee;
}

.nav_right_items-menu {
    float: left; 
    margin-left: 2%; 
    width: 40%; 
    line-height: 18px; 
    font-size: 12px;
}

.nav_right_items-number {
    float: left; 
    line-height: 40px; 
    height: 40px; 
    width: 30%;
}

.nav_right_items-number-update {
    float: right;
    text-align: center; 
    width: 15px; 
    margin-top: 12px; 
    height: 15px; 
    line-height: 15px; 
    border-radius: 7px;
}

.nav_right_items-number-min {
    border: 1px solid rgb(219, 215, 210);
}

.nav_right_items-number-plus {
    background-color: rgb(21, 179, 179); 
    color: #fff;
    border: 1px solid rgb(21, 179, 179);
}

.nav_right_items-number-value {
    float: right;
    text-align: center; 
    width: 20px; 
    font-size: 12px;
}