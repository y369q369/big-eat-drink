/* 1. 设置整个页面的背景颜色 */
page {
    background: #f5f5f5;
    width: 100%;
    height: 100%;
    /* 避免左侧Item不够时 被白色覆盖*/
}

/* 2.主盒子 */
.container {
    width: 100%;
    height: 100%;
    background-color: #fff;
}

/* 3.左盒子*/
.nav_left {
    float: left;
    width: 25%;
    height: calc(100% - 10px);                    
    background: #f5f5f5;            
    text-align: center;
    padding-top: 10px;        
}

.nav_left .nav_left_items {
    height: 40px;
    line-height: 40px;
    padding: 6px 0;
    border-bottom: 1px solid #dedede;
    font-size: 14px;
}

.nav_left .nav_left_items.active {
    background: #fff;
    color: #3385ff;
    border-left: 3px solid #3385ff;
}

.menu-detail {
    float: left; 
    width: calc(100% - 5px);
}

.menu-tip {
    float: left;
    margin-top: -6px;
    margin-left: -15px; 
    width: 20px; 
    height: 20px; 
    line-height: 20px; 
    background-color: rgb(219, 215, 210); 
    color: #000; 
    border-radius: 10px; 
    text-align: center; 
    font-size: 12px;
}

/* 4.右盒子 */
.nav_right {
    float: left;
    width: 75%;
    height: calc(100% - 10px);
    background: #fff;
    padding-top: 10px;
}

.nav_right .nav_right_items {
    height: 40px;
    line-height: 40px;
    padding: 6px;
    margin-right: 6px;
}

.nav_right .nav_right_items .nav_right_items-img {
    float: left; 
    width: 25%; 
    height: 40px;
    padding: 0 5px;
}


.nav_right_items-number {
    float: left; 
    line-height: 40px; 
    height: 40px; 
    width: 30%;
}

.button-number-update {
    float: right;
    text-align: center; 
    width: 15px; 
    margin-top: 12px; 
    height: 15px; 
    line-height: 14px; 
    border-radius: 7px;
}

.button-number-min {
    border: 1px solid rgb(219, 215, 210);
}

.button-number-plus {
    background-color: rgb(21, 179, 179); 
    color: #fff;
    border: 1px solid rgb(21, 179, 179);
}

.nav_right_items-number-value {
    float: right;
    text-align: center; 
    width: 20px; 
    font-size: 12px;
}

/* 购物车悬浮框 */
.gouwuche {
    position: absolute; 
    bottom: 15px; 
    left: 5px;
}

.gouwuche-font {
    float: left; 
    width: 50px; 
    height: 50px; 
    line-height: 50px; 
    background-color: rgb(21, 179, 179); 
    border-radius: 25px; 
    text-align: center;
}

.gouwuche-tip {
    float: left; 
    margin-left: -15px; 
    width: 20px; 
    height: 20px; 
    line-height: 20px; 
    background-color: #111; 
    color: #fff; 
    border-radius: 10px; 
    text-align: center; 
    font-size: 12px;
}


/* 订单对话框 */
.order_dialog {
    height: 100%;
    width: 100%;
    overflow: hidden;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 2000;
    background: #fff;
    padding-top: 20rpx;
}

.order_dialog_scorll {
    height: calc(100% - 70px); 
    padding-top: 10px;
}

.order_dialog_menu_items {
    height: 40px; 
    padding-bottom: 10px;
}