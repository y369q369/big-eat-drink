<view>
    <view style="padding: 20px; font-size: 14px; text-align: center; background-color: rgb(243, 243, 236);">
        <!-- 为点餐信息共享，需要您授权微信相关信息 -->
        微信授权
    </view>

    <view>
        <view style="padding-bottom: 30px; padding-top: 50px; ">
            <button open-type="chooseAvatar" bind:chooseavatar="onChooseAvatar" style="height: 60px; width: 60px !important; line-height: 60px;padding: 0px; border-radius: 8px;">
                <image style="display: block; height: 60px; width: 60px;" src="{{avatarUrl}}"></image>
            </button>
        </view>

        <view style="padding-left: 20%; width: 60%; text-align: center;">
            <input bindblur="changeNickName" type="nickname" placeholder="请输入昵称" />
        </view>
    </view>

    <view style="position: absolute; bottom: 20px; width: 80%; padding-left: 10%;">
        <button bindtap="submit">提交</button>
    </view>

</view>